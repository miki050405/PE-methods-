import arithmetic

x = int(input("Введите число от 1 до 9: "))
if 1 <= x <= 3:
    arithmetic.check1()

elif 4 <= x <= 6:
    m = int(input("Введите степень, в которую нужно возвести число: "))
    print("Результат:", arithmetic.check2(x, m))

elif 7 <= x <= 9:
    arithmetic.check3(x)

else:
    print("Ошибка ввода")
