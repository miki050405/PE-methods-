def check1():
    s = input("Введите строку: ")
    n = int(input("Введите количество повторов строки: "))
    for i in range(n):
        print(s)


check2 = lambda x, m: x**m


def check3(x):
    for i in range(10):
        x += 1
        print(x)


print("Задание №2: Переписать задание из первого урока переведя все проверки в функции")
x = int(input("Введите число от 1 до 9: "))

if 1 <= x <= 3:
    check1()

elif 4 <= x <= 6:
    m = int(input("Введите степень, в которую нужно возвести число: "))
    print("Результат:", check2(x, m))

elif 7 <= x <= 9:
    check3(x)

else:
    print("Ошибка ввода")

print(
    "Задание №3: Напишите функцию, которая разбивает введённую строку на слова и выводит по очереди само слова тире ее длина."
)


def stringbreak(s):
    words = s.split()
    for i in range(len(words)):
        print(words[i], " - ", len(words[i]))


s = input("Введите строку: ")
stringbreak(s)

print("Задание №4")


def st(*args):
    if not args:
        return []
    else:
        a = []
        a.append(args[0] ** 1)
        for i in range(len(args) - 1):
            a.append(args[i + 1] ** args[i])
        return a


b = input("Введите числа через пробел: ").split()
b = [int(x) for x in b]
print(st(*b))
